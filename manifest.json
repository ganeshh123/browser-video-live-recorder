{
  "name": "Live Recorder",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Record audio and video in real time.",
  "homepage_url": "https://gitlab.com/losnappas/Live-Recorder",
  "background": {
    "scripts": [
      "/src/background.js"
    ]
  },
  "browser_action": {
	  "browser_style": true,
	  "default_title": "Start recording."
  },
	
  "permissions": [
	"activeTab"
  ],
  "web_accessible_resources": [
	  "live-recorder-worker-bundle.js"
  ]
}

